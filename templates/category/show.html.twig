{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
<div class="container mt-5">

    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold text-primary mb-5 display-5 text-center">Catégorie</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <th>Créé le</th>
                        <td>{{ category.createdAt ? category.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Icône</th>
                        <td>{{ category.icon }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-3 justify-content-center">
        <div class="col-auto">
            <a href="{{ path('app_category_index') }}" class="btn btn-outline-primary">Retourner à la liste</a>
        </div>
        <div class="col-auto">
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary">Modifier</a>
        </div>
        <div class="col-auto">
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>

</div>
{% endblock %}