{% extends 'empty.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="page page-center">
    <div class="container container-tight py-4">
        <div class="card card-md">
            <div class="card-body">
                <h2 class="h2 text-center mb-4">Réinitialiser votre mot de passe</h2>
                {{ form_start(resetForm, {'attr': {'class': 'd-flex flex-column gap-3'}}) }}
                    {{ form_row(resetForm.plainPassword, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Votre nouveau mot de passe'
                        }
                    }) }}
                    <button class="btn btn-primary w-100">Réinitialiser le mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
