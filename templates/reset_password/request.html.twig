{% extends 'empty.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="page page-center">
    <div class="container container-tight py-4">
        <div class="card card-md">
            <div class="card-body">
                <h2 class="h2 text-center mb-4">Réinitialiser votre mot de passe</h2>
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(requestForm, {'attr': {'class': 'd-flex flex-column gap-3'}}) }}
                    {{ form_row(requestForm.email, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Votre adresse email'
                        }
                    }) }}
                    <div class="text-muted">
                        <small>
                            Saisissez votre adresse email, nous vous enverrons un
                            lien pour réinitialiser votre mot de passe.
                        </small>
                    </div>
                    <button class="btn btn-primary w-100">Envoyer l'email de réinitialisation</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
