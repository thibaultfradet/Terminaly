<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    
   {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
      <link href="{{ asset('assets/styles/tabler.min.css') }}" rel="stylesheet">        
    {% endblock %}

     {% block javascripts %}
      
      <script src="{{ asset('assets/js/jquery-3.7.1.min.js') }}"></script>

      <script src="{{ asset('assets/js/tabler.min.js') }}"></script>

      <script src="{{ asset('assets/js/cart.js') }}"></script>
      
      <script src="{{ asset('assets/js/search-product.js') }}"></script>
  {% endblock %}
      
  </head>
  <body >
     <div class="page" style="max-height: 95vh; height: 95vh;">
        <div class="page-wrapper d-flex flex-column h-100">
          {# Top navigation bar #}
          {% include 'components/top_nav.html.twig' %}
          <div class="">
            {% for label, messages in app.flashes %}
              {% for message in messages %}
                {% set bs_class =
                  label == 'success' ? 'alert-success' :
                  label == 'error'   ? 'alert-danger'  :
                  label == 'warning' ? 'alert-warning' :
                  'alert-info' %}
                <div class="alert {{ bs_class }} alert-dismissible fade show" role="alert">
                  {{ message }}
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              {% endfor %}
            {% endfor %}
          </div>
          {% block body %}{% endblock %}
        </div>
     </div>
    {% block javascripts_bottom %}{% endblock %}
    </body>
</html>