{# Form start and end (Symfony Form) #}
{{ form_start(form) }}
{{ form_end(form) }}

{# Modal product #}
<div id="product-modal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content rounded-4">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold" id="modal-name"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="modal-price" class="fs-5 fw-semibold mb-3"></p>

                <div class="mb-3">
                    <label for="modal-quantity" class="form-label fw-semibold">Quantit√© :</label>
                    <input type="number" id="modal-quantity" min="0" step="0.1" value="0" class="form-control">
                </div>

                <div class="d-flex justify-content-between mb-3 gap-2">
                    <button type="button" class="btn btn-outline-secondary flex-fill fw-bold quantity-preset-btn" data-quantity="0.5">0.5</button>
                    <button type="button" class="btn btn-outline-secondary flex-fill fw-bold quantity-preset-btn" data-quantity="1">1</button>
                    <button type="button" class="btn btn-outline-secondary flex-fill fw-bold quantity-preset-btn" data-quantity="2">2</button>
                    <button type="button" class="btn btn-outline-secondary flex-fill fw-bold quantity-preset-btn" data-quantity="3">3</button>
                </div>

                <button id="modal-add" type="button" class="btn btn-primary w-100 fw-bold">
                    Ajouter
                </button>
            </div>
        </div>
    </div>
</div>