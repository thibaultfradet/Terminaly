{% extends 'base.html.twig' %}

{% block title %}Ventes en attente{% endblock %}

{% block body %}
<div class="p-6 w-full">
    <h1 class="text-2xl font-bold mb-6">Ventes en attente ({{ totalOwing }})</h1>

    {% if owingSales is empty %}
        <p class="text-gray-500">Aucune vente en attente.</p>
    {% else %}
        <div class="overflow-x-auto w-full">
    <table class="w-full border border-gray-200 rounded-lg">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Client</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Date</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Montant total</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Action</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            {% for sale in owingSales %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-sm text-gray-900">{{ sale.clientName }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ sale.createdAt|date('d/m/Y H:i') }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ sale.total }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900 space-x-2">
                        <button 
                            class="btn btn-primary open-modal-btn"
                            data-sale='{{ salesData[loop.index0]|json_encode(constant("JSON_HEX_APOS")) }}'>
                            Détails
                        </button>

                        <a 
                            href="{{ path('admin_sale_owing_completed', {'id': sale.id}) }}" 
                            class="btn btn-outline-primary"
                            onclick="return confirm('Voulez-vous vraiment compléter cette vente ?');">
                            Compléter
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
    {% endif %}
</div>

{% include 'components/_modal_owing_details.html.twig' %}

<script src="{{ asset('assets/js/modal-owing.js') }}"></script>
{% endblock %}