{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="container mt-5">

    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold text-primary mb-5 display-5 text-center">Produit</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 text-center mb-4">
            {% if imagePath %}
                <img src="{{asset(imagePath) }}" alt="{{ product.name }}" class="img-fluid" style="max-width:200px; border-radius:5px;">
            {% endif %}
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ product.price }}</td>
                    </tr>
                    <tr>
                        <th>Créé le</th>
                        <td>{{ product.createdAt ? product.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-3 justify-content-center">
        <div class="col-auto">
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-primary">Retourner à la liste</a>
        </div>
        <div class="col-auto">
            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">Modifier</a>
        </div>
        <div class="col-auto">
            {{ include('product/_delete_form.html.twig') }}
        </div>
    </div>

</div>
{% endblock %}