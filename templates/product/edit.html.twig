{% extends 'base.html.twig' %}

{% block title %}Modifier un produit{% endblock %}

{% block body %}
<div class="container mt-5">

    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold text-primary mb-5 display-5 text-center">Modifier un produit</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            {{ include('product/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>

    <div class="row mt-3 justify-content-center">
        <div class="col-auto">
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-primary">Retourner à la liste</a>
        </div>
        <div class="col-auto">
            {{ include('product/_delete_form.html.twig') }}
        </div>
    </div>

</div>
