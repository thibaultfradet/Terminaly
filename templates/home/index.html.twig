{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Ensure scrollable areas work correctly inside flex containers */
        .product-grid-container,
        #cart-items {
            flex-grow: 1;
            min-height: 0;
            overflow-y: auto;
            position: relative;
        }

        /* Ghost/fade effect to indicate more content */
        .product-grid-container::after,
        #cart-items::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 30px;
            background: linear-gradient(to bottom, rgba(255,255,255,0), rgba(255,255,255,1));
            pointer-events: none;
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-wrapper d-flex flex-column h-100">
    <div class="row g-3 h-100">
        {# LEFT SECTION: Products #}
        <div class="col-12 col-lg-8 d-flex flex-column h-100">
            <div class="card p-3 shadow-sm d-flex flex-column h-100">

                <hr class="mt-0 mb-3">

                {# Categories horizontal scroll #}
                <div class="mb-3 flex-shrink-0" style="overflow-x: auto; white-space: nowrap;">
                    <div class="d-flex gap-3">
                        <a href="{{ path('app_home', { filter: 'all' }) }}"
                        class="d-flex flex-column align-items-center text-decoration-none flex-shrink-0 px-3 rounded-3">
                            <div class="d-flex justify-content-center align-items-center bg-secondary rounded-circle mb-2"
                                style="width:60px; height:60px;">
                                {{ ux_icon('qlementine-icons:menu-burger-16', { class: 'fs-4 text-white p-2' }) }}
                            </div>
                            <span class="fw-bold text-dark text-center">{{ "Tous les produits" }}</span>
                        </a>
                        {% for cat in categorys %}
                            {% include 'home/_category_item.html.twig' with {'category': cat, 'categoryId': categoryId, 'horizontal': true} %}
                        {% endfor %}
                    </div>
                </div>

                {# Search bar #}
                <div class="input-icon mb-4 flex-shrink-0">
                    <input type="text" id="search-products" class="form-control" placeholder="Rechercher un produit...">
                    <span class="input-icon-addon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-search" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <circle cx="10" cy="10" r="7" />
                            <line x1="21" y1="21" x2="15" y2="15" />
                        </svg>
                    </span>
                </div>

                {# Product grid scrollable #}
                <div class="product-grid-container flex-grow-1" style="min-height:0;">
                    {% if products is empty %}
                        <p class="text-center text-muted">Aucun produit disponible.</p>
                    {% else %}
                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
                            {% for product in products %}
                                <div class="col">
                                    {% include 'home/_product_item.html.twig' with {'product': product} %}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

            </div>
        </div>

        {# RIGHT SECTION: Cart #}
        <div class="col-12 col-lg-4 d-flex flex-column h-100">
            <div class="card shadow-sm p-3 d-flex flex-column h-100">
                {# Header #}
                <h2 class="h4 mb-3 flex-shrink-0">Mon Panier</h2>

                {# Scrollable items #}
                <div id="cart-items" class="flex-grow-1">
                    <!-- Items injected via JS -->
                </div>

                {# Footer #}
                <div class="border-top pt-3 mt-3 flex-shrink-0">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="fw-bold fs-2">Total :</span>
                        <span id="cart-total" class="fs-2 text-primary">0,00 â‚¬</span>
                    </div>
                    <button id="checkout-button" class="btn btn-primary w-100">
                        Passer au paiement
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{# Modals #}
{% include 'components/_product_modal.html.twig' %}
{% include 'components/_payment_modal_test.html.twig' %}

<script src="{{ asset('assets/js/product-modal.js') }}"></script>
<script src="{{ asset('assets/js/payment-modal.js') }}"></script>
{% if isAllProducts is defined and isAllProducts %}
<script>
    const allProducts = {{ products|json_encode|raw }};
</script>
{% endif %}

{% endblock %}