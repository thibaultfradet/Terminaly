<div class="card h-100 w-100 shadow-sm cursor-pointer product-card border-0"
     data-id="{{ product.id }}"
     data-name="{{ product.name }}"
     data-price="{{ product.price }}"
     data-image="{{ asset('img/products/image.jpg') }}"
     data-category="{{ product.category.name ?? '' }}">
    
    {# Product image #}
    <img src="{{ asset('img/products/image.jpg') }}"
         alt="{{ product.name }}"
         class="card-img-top"
         style="height:170px; object-fit:cover;">
    
    {# Card body with product info #}
    <div class="card-body d-flex flex-column justify-content-between">
        <h5 class="card-title text-center text-truncate" style="-webkit-line-clamp:2; display:-webkit-box; -webkit-box-orient:vertical; overflow:hidden;">
            {{ product.name }}
        </h5>
        <p class="bg-warning text-center fw-bold text-dark rounded py-1 mb-0">
            {{ product.price|number_format(2, ',', ' ') }} â‚¬
        </p>
    </div>
</div>