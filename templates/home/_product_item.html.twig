<div class="bg-light rounded p-2 h-100 product-card" 
     data-id="{{ product.id }}"
     data-name="{{ product.name }}"
     data-price="{{ product.price }}"
     data-image="{{ product.imagePath }}"
     data-category="{{ product.category.name ?? '' }}">

    {# Inner card with image #}
    <div class="card border-0 shadow-sm h-100">
        <img src="{{ product.imagePath}}" 
             alt="{{ product.name }}" 
             class="card-img-top rounded-top p-4"
             style="height:170px; object-fit:cover;">

        <div class="card-body p-2 d-flex flex-column">
            {# Product name #}
            <h4 class="fw-bold mb-2 text-truncate" style="-webkit-line-clamp:2; display:-webkit-box; -webkit-box-orient:vertical; overflow:hidden;">
                {{ product.name }}
            </h4>

            {# Category and price line #}
            <div class="d-flex justify-content-between align-items-center mt-auto">
                <span class="text-muted small">{{ product.category.name ?? '' }}</span>
                <span class="fw-bold">{{ product.price|number_format(2, ',', ' ') }} â‚¬</span>
            </div>
        </div>
    </div>
</div>