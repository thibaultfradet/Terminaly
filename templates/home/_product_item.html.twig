<div class="bg-white rounded-3 shadow-sm hover:shadow-lg transition p-3 d-flex flex-column align-items-center cursor-pointer product-card"
     data-id="{{ product.id }}"
     data-name="{{ product.name }}"
     data-price="{{ product.price }}"
     data-image="{{ asset('img/products/image.jpg') }}"
     data-category="{{ product.category.name ?? '' }}"
>
    {# Product image #}
    <img src="{{ asset('img/products/image.jpg') }}"
         alt="{{ product.name }}"
         class="img-fluid rounded mb-2"
         style="width:100%; height:128px; object-fit:cover;">
    
    {# Product name #}
    <h3 class="fw-semibold text-center mb-1">{{ product.name }}</h3>
    
    {# Product price #}
    <p class="bg-warning text-center fw-bold text-dark px-3 py-1 rounded mb-2">
        {{ product.price|number_format(2, ',', ' ') }} â‚¬
    </p>
</div>