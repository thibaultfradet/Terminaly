{# templates/pdf/invoice.html.twig #}
{% extends 'empty.html.twig' %}

{% block body %}
<style>
    body {
        font-family: Arial, sans-serif;
        font-size: 12px;
    }

    .invoice-header {
        margin-bottom: 20px;
    }

    .invoice-header h1 {
        font-size: 24px;
        margin-bottom: 5px;
    }

    .table th, .table td {
        padding: 6px;
        border: 1px solid #000;
    }

    .table thead th {
        background-color: #f2f2f2;
    }

    /* Prevent table rows from breaking across pages */
    tr {
        page-break-inside: avoid;
    }

    table {
        page-break-inside: auto;
        width: 100%;
        border-collapse: collapse;
    }

    .page-break {
        page-break-after: always;
    }

    .text-right {
        text-align: right;
    }

    .notes {
        margin-top: 20px;
    }
</style>

<div class="invoice-header">
    <h1>Facture #{{ sale.id }}</h1>
    <p><strong>Date:</strong> {{ sale.createdAt|date('d/m/Y H:i') }}</p>
    {% if sale.clientName %}
        <p><strong>Client:</strong> {{ sale.clientName }}</p>
    {% endif %}
    <p><strong>Type de paiement:</strong> 
        {% set paymentTypeLabels = {
            'card': 'Carte',
            'cash': 'Espèce',
            'check': 'Chèque',
            'owing': 'Dû'
        } %}
        {{ paymentTypeLabels[sale.paymentType] }}
</p>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Produit</th>
            <th>Quantité</th>
            <th>Prix unitaire</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        {% for saleProduct in sale.saleProducts %}
            <tr>
                <td>{{ saleProduct.product.name }}</td>
                <td>{{ saleProduct.quantity|number_format(2, ',', ' ') }}</td>
                <td>{{ saleProduct.price|number_format(2, ',', ' ') }} €</td>
                <td>{{ (saleProduct.quantity * saleProduct.price)|number_format(2, ',', ' ') }} €</td>
            </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-right">Total</th>
            <th>
                {{ sale.saleProducts|reduce((carry, sp) => carry + (sp.quantity * sp.price), 0)|number_format(2, ',', ' ') }} €
            </th>
        </tr>
    </tfoot>
</table>

{% if sale.owingCompleted is not null and not sale.owingCompleted %}
    <div class="notes">
        <strong>Note:</strong> Ce client a encore un solde restant.
    </div>
{% endif %}
{% endblock %}