{% extends 'base.html.twig' %}

{% block title %}Ordre des produits{% endblock %}

{% block body %}
<div class="container my-5">

    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="fw-bold text-primary display-5">Ordre des produits</h1>
        </div>
    </div>

    <div class="row mb-3 align-items-center">
        <div class="col-md-4 offset-md-4 text-center">
            <label for="categorySelect" class="form-label fw-semibold">Catégorie sélectionnée</label>
            <select id="categorySelect" class="form-select">
                {% for category in categories %}
                    <option value="{{ category.id }}" {% if category.id == selectedCategory.id %}selected{% endif %}>
                        {{ category.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-light fw-semibold">
                    Produits de la catégorie : {{ selectedCategory.name }}
                </div>
                <div class="card-body">
                    <ul id="sortable-products" class="list-group">
                        {% for product in products %}
                            <li class="list-group-item d-flex justify-content-between align-items-center" data-id="{{ product.id }}">
                                <span>{{ product.name }}</span>
                            </li>
                        {% else %}
                            <li class="list-group-item text-muted text-center">Aucun produit trouvé.</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>

{# JavaScript for SortableJS + jQuery AJAX #}
<script src="{{ asset('assets/js/sortablejs-1.15.0.min.js') }}"></script>
<script>
// Initialize SortableJS on the product list
const sortable = new Sortable(document.getElementById('sortable-products'), {
    animation: 150,
    onEnd: function (evt) {
        // Build the new order list
        const orderData = [];
        $('#sortable-products li').each(function(index) {
            orderData.push([
                $(this).data('id'),   // first element = product id
                index + 1             // second element = new order
            ]);
        });

        $.ajax({
            url: "{{ path('app_product_order_update') }}",
            method: "POST",
            contentType: "application/json",
            data: JSON.stringify(orderData),
            success: function(response) {
                console.log(response.message);
            },
            error: function() {
                alert("Erreur lors de la mise à jour de l'ordre.");
            }
        });    
    }
});

// Handle category change
$('#categorySelect').on('change', function() {
    const categoryId = $(this).val();
    window.location.href = "{{ path('app_product_order_index') }}?category=" + categoryId;
});
</script>
{% endblock %}